
@model userdb.Models.UserPasswordViewModel
        <div class="col-sm-5">
            <div class="panel panel-default">
            <div class="panel-heading">Change Password</div>
            <div class="panel-body">
                <form asp-controller="User" asp-action="UpdatePassword" method="post">
                    <input type="hidden" name="UserId" value="@ViewBag.User.UserId">
                    
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="form-group">
                            <label asp-for="Password" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirmation" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="PasswordConfirmation" class="form-control" />
                                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Update Password" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
   